# DeepSeek API配置
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_API_MODEL=deepseek-chat
DEEPSEEK_API_TEMPERATURE=1.5
DEEPSEEK_API_MAX_TOKENS=2000

# Unsplash API配置
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here

# MySQL数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=your_database_name

# 数据库连接URL
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?connection_limit=5&pool_timeout=2&connect_timeout=5"

# JWT配置
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# API配置
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# 缓存配置
CACHE_DURATION=3600

# 内容配置
MAX_CONTENT_LENGTH=2000
MAX_IMAGE_SIZE=5242880  # 5MB

# Next Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key  # 使用 openssl rand -base64 32 生成
